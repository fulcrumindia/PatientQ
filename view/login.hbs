<section id="wrapper" class="step-register">
  <div class="register-box">
    <div class="">

      <!-- multistep form -->
      {{#if message.length}}
        <div class="alert alert-danger">{{message}}</div>
      {{/if}}
      <form id="msform" action="/login" method="post">
        <!-- progressbar -->
        <fieldset>
          <div>
            <a href="/signup" style="float: right;">Sign Up</a>
            <h2 class="text-left">Sign In</h2>
            <img src="./images/logo.png" width="60%" alt="home" />
            <hr>
            <!-- <a href="javascript:void(0)" class="btn btn-danger fb-btn"><span class="fa fa-facebook"></span> Sign in with Facebook</a>
        <a href="javascript:void(0)" class="btn btn-danger tw-btn"><span class="fa fa-twitter"></span> Sign in with Twitter</a>
        <br><br> -->
            <h4 class="text-left">Sign in with your registered account</h4>
            <hr>
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1"><i class="fa fa-user"></i></span>
              <input type="text" class="form-control" placeholder="Username" name="username" aria-describedby="basic-addon1">
            </div>
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1"><i class="fa fa-unlock-alt"></i></span>
              <input type="password" class="form-control" placeholder="Password" name="password" aria-describedby="basic-addon1">
            </div>
            <div class="input-group">
              <div class="col-md-12">
                {{!-- <div class="checkbox checkbox-primary pull-left p-t-0">
                  <input id="checkbox-signup" type="checkbox">
                  <label for="checkbox-signup"> Remember me </label>
                </div> --}}
                <a href="javascript:void(0)" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> Forgot pwd?</a>                </div>
            </div>
            <div class="input-group">
              <button class="btn btn-danger btn-signin" type="submit">Sign in</button><br><br>
            </div>
          </div>
        </fieldset>
      </form>
      <div class="clear"></div>
    </div>
  </div>
</section>

 
